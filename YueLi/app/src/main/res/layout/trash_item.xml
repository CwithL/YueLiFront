<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    />
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <View
            android:id="@+id/journey_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/shang"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="7dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            />
        <Button
            android:id="@+id/trash"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/trash"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海：梦中城"
            android:textColor="@color/white"
            android:textSize="60px"
            app:layout_constraintLeft_toLeftOf="@+id/journey_bg"
            app:layout_constraintTop_toTopOf="@+id/journey_bg"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <View
            android:id="@+id/vertical_line"
            android:layout_width="4dp"
            android:layout_height="48dp"
            app:layout_constraintLeft_toLeftOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:background="@color/top_blue"
            android:layout_marginLeft="2dp"
            />
        <TextView
            android:id="@+id/firstday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="2018.2.22"
            android:textSize="47px"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toRightOf="@+id/vertical_line"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="47px"
            app:layout_constraintLeft_toRightOf="@+id/firstday"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="4天"
            android:textSize="47px"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toRightOf="@+id/slash"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国，上海"
            android:textColor="@color/white"
            android:textSize="47px"
            app:layout_constraintLeft_toRightOf="@+id/vertical_line"
            android:layout_marginLeft="7dp"
            app:layout_constraintTop_toBottomOf="@+id/firstday"
            android:layout_marginTop="3dp"
            />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>