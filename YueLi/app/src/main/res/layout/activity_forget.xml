<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/yueli"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        />
    <RelativeLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_wihte_frame" >

        <ImageView
            android:id="@+id/avator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:src="@drawable/user_96px"/>
        <EditText
            android:id="@+id/name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/avator"
            android:hint="请输入用户名"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            android:background="@null"
            android:cursorVisible="false"
            >
            <requestFocus />
        </EditText>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintTop_toBottomOf="@+id/name"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_wihte_frame" >

        <ImageView
            android:id="@+id/lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:src="@drawable/lock_96px"/>
        <EditText
            android:id="@+id/psw_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/lock"
            android:hint="请输入新密码"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="24sp"
            android:background="@null"
            android:cursorVisible="false"
            android:inputType="numberPassword"
            >
            <requestFocus />
        </EditText>
    </RelativeLayout>
    <Button
        android:id="@+id/log_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintTop_toBottomOf="@+id/password"
        android:layout_marginTop="20dp"
        android:text="登录"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_round_corner"
        />
    <Button
        android:id="@+id/back_to_login"
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:text="返回登录"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/log_button"
        app:layout_constraintRight_toRightOf="@+id/log_button"
        android:background="@null"
        android:layout_marginTop="5dp"
        />
    <View
        android:id="@+id/underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/back_to_login"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="@+id/back_to_login"
        app:layout_constraintRight_toRightOf="@+id/back_to_login"
        >

    </View>


</android.support.constraint.ConstraintLayout>