<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.jeff.yueli.MainActivity">
    <ImageView
    android:id="@+id/location_icon"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:src="@drawable/location_96px"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="15dp"
    />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:text="里约热内卢，巴西"
        android:textColor="@color/white"
        android:textSize="60px"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/search_96px"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        />
    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/individual_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/individual"
        android:layout_marginRight="6dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/individual"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/male_user_96px"
        app:layout_constraintBottom_toTopOf="@+id/recommend_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/trip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游记"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/individual_text"
        android:layout_marginRight="38dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/trip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/photo_gallery_96px"
        app:layout_constraintBottom_toTopOf="@id/meet_text"
        app:layout_constraintRight_toLeftOf="@+id/individual"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:id="@+id/recommend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/recommend"
        android:layout_marginLeft="6dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/recommend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/marker_96px"
        app:layout_constraintBottom_toTopOf="@+id/recommend_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/meet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遇见"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recommend_text"
        android:layout_marginLeft="38dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/meet"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/map_marker_96px"
        app:layout_constraintBottom_toTopOf="@id/meet_text"
        app:layout_constraintLeft_toRightOf="@+id/recommend"
        android:layout_marginLeft="25dp"
        />
    <View
        android:id="@+id/introduction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        android:background="#69434343"
        app:layout_constraintTop_toTopOf="@+id/destination"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/description"
        android:textSize="60px"
        app:layout_constraintBottom_toTopOf="@+id/bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:lines="4"
        />
    <TextView
        android:id="@+id/destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/description"
        android:text="科帕卡巴纳海滩"
        android:textSize="70px"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="4dp"
        />








</android.support.constraint.ConstraintLayout>
