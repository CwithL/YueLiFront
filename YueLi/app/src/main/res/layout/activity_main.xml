<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeff.yueli.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/plus"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/individual_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/individual"
        android:layout_marginRight="1.5dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/individual"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/male_user_96px"
        app:layout_constraintBottom_toTopOf="@+id/recommend_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/trip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游记"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/individual_text"
        android:layout_marginRight="27dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/trip"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/photo_gallery_96px"
        app:layout_constraintBottom_toTopOf="@id/meet_text"
        app:layout_constraintRight_toLeftOf="@+id/individual"
        android:layout_marginRight="27dp"
        />
    <TextView
        android:id="@+id/recommend_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="推荐"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/recommend"
        android:layout_marginLeft="0dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/recommend"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/marker_96px"
        app:layout_constraintBottom_toTopOf="@+id/recommend_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/meet_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="遇见"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/recommend_text"
        android:layout_marginLeft="28dp"
        android:textColor="#a9a9a9"
        />
    <ImageView
        android:id="@+id/meet"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/map_marker_96px"
        app:layout_constraintBottom_toTopOf="@id/meet_text"
        app:layout_constraintLeft_toRightOf="@+id/recommend"
        android:layout_marginLeft="25dp"
        />
</android.support.constraint.ConstraintLayout>

