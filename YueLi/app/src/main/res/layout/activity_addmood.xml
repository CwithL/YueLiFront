<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray">
    <ImageButton
        android:id="@+id/mood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mood_96px"
        android:background="@drawable/shape_round_button_blue"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="100dp"
        />
    <ImageButton
        android:id="@+id/journey"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/journey_96px"
        android:background="@drawable/shape_round_button_green"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="100dp"
        />
    <TextView
        android:id="@+id/write_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发心情"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/mood"
        app:layout_constraintLeft_toLeftOf="@+id/mood"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:id="@+id/write_journey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写游记"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/journey"
        app:layout_constraintLeft_toLeftOf="@+id/journey"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        />



</android.support.constraint.ConstraintLayout>