<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/back"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@drawable/left_black_back"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="10dp"
    />
    <ImageView
        android:id="@+id/avator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/male_user_96px"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旅行者"
        android:textSize="25dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/avator"
        app:layout_constraintLeft_toRightOf="@+id/avator"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="3dp"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018-3-08"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/avator"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="好好好好好好好好好好好玩玩玩玩玩玩玩玩啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"
        app:layout_constraintLeft_toLeftOf="@id/avator"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/avator"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/pic"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/background"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintLeft_toLeftOf="@+id/description"
        app:layout_constraintRight_toRightOf="@+id/description"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />
    <ImageView
        android:id="@+id/location_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/marker_96px"
        app:layout_constraintTop_toBottomOf="@+id/pic"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/pic"
        />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三亚，中国"
        app:layout_constraintLeft_toRightOf="@+id/location_icon"
        app:layout_constraintTop_toTopOf="@+id/location_icon"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/location_icon"
        android:background="@color/gray"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户评论"
        app:layout_constraintTop_toBottomOf="@+id/line"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="12dp"
        app:layout_constraintRight_toLeftOf="@+id/sendcomment"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape_comment"
        >
        <EditText
            android:id="@+id/name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:hint="撰写我的评论"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="20sp"
            android:background="@null"
            android:cursorVisible="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
        </EditText>
    </RelativeLayout>
    <Button
        android:id="@+id/sendcomment"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/sent_96px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/comment_title"
        android:layout_marginTop="10dp"
        />


</android.support.constraint.ConstraintLayout>